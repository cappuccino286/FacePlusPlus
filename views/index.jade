extends layout

block content
  container
    != messages()
    .row.align-items-center
      .col-6
        h1.text-danger Face++
        
        form.form-row(method='post',action='face-detection',enctype='multipart/form-data')
            .col-auto
              label Via image upload
            .col-7
                input#imgUpload.form-control-file(type='file', name="imgUpload")
            .col-auto
              input.form-control.btn-primary(type='submit', value='Detect')
        br    
        
        form.form-row(method='Post', action='face-detection/face-detection-url')
          .col-auto
            label Via image url:  
          .col-7
            input.form-control(name='image_url',placeholder='image_url', type='text')
          .col-auto
            input.form-control.btn-primary(type='submit', value='Detect via URL')
      .col-6
        img.img-fluid(src='../images/bg.png', alt='background')
                
